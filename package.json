{
	"name": "@pax2pay/client",
	"version": "0.6.14",
	"description": "Client library for the Pax2Pay API",
	"author": "Pax2Pay Ltd.",
	"license": "MIT",
	"repository": "https://github.com/pax2pay/client-js",
	"bugs": {
		"url": "https://github.com/pax2pay/client-js/issues"
	},
	"homepage": "https://github.com/pax2pay/client-js",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|isly|gracely|@pax2pay|cloud-http)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"devDependencies": {
		"@types/isomorphic-fetch": "^0.0.36",
		"@types/jest": "^29.5.3",
		"@typescript-eslint/eslint-plugin": "6.3.0",
		"@typescript-eslint/parser": "6.3.0",
		"dotenv": "^16.3.1",
		"eslint": "^8.46.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"jest": "^29.6.2",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.1.1",
		"typescript": "^5.1.6"
	},
	"dependencies": {
		"isoly": "^0.1.16",
		"isly": "^0.1.20",
		"isomorphic-fetch": "^3.0.0",
		"math-exact": "^1.0.5"
	},
	"overrides": {
		"semver": "7.5.3",
		"json5": "1.0.2"
	}
}
